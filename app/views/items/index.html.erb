<div class="row">
  <div class="col-md-10 col-md-offset-1">
    <h2 class="text-center">商品一覧</h3>
  </div>
  <div class="col-md-4 col-md-offset-4">
    <% @items.each do |item| %>
      <p class="text-center">
        <%= link_to item.name %>
        <% item.shops.each do |shop| %>
          <%= link_to shop.name %>
        <% end %>
      </p>
    <% end %>
  </div>
</div>
